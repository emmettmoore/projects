{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve", // Next.js does its own JSX transform.
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": ".build",
    "paths": {
      "@site/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".eslintrc.js",
    "jest.config.js",
    "**/*.js",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [".build", "node_modules"]
}
