{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": ".build",
    "paths": {
      "@emmettmoore/advent-of-code/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    ".eslintrc.js",
    "jest.config.js",
    "**/*.js",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [".build", "node_modules", "template"]
}
